<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="5">Hasbro List</th>
      <th>
         <a class="btn btn-primary" href="/hasbro/add">ADD</a>
         <a class="btn btn-success" href="/hasbro/drop"
            onclick="return confirm('Are you sure to drop all hasbro ?');">DROP</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>SKU</th>
      <th>Image</th>
      <th>Price</th>
      <th>Menu</th>
   </tr>
   <tr>
      <th colspan="4">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/hasbro/sort/asc">Ascending</option>
            <option value="/hasbro/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="2">
         <form action="/hasbro/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Enter student name to search">
            </div>
         </form>
      </th>
   </tr>
   {{#each hasbro }}
   <tr>
      <td>{{name}}</td>
      <td>{{sku}}</td>
      {{!-- <td>{{dateFormat dob "DD/MM/YYYY"}}</td> --}}
      <td>
         <a href="/hasbro/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td>
      {{!-- <td>
         {{#equal graduated true}}
         <span style="color: red; font-weight: bold;">Graduated</span>
         {{/equal}}
         {{#equal graduated false}}
         <span style="color: blue; font-style: italic;">Ungraduated</span>
         {{/equal}}
      </td> --}}
      <td>{{price}}</td>
      <td>
         <a class="btn btn-warning" href="/hasbro/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/hasbro/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>