<div class="container text-center">
   <div class="card-group">
      <div class="row">
         {{#each lego}}
         <div class="card col-md-2 m-3">
            <a href="/lego/detail/{{_id}}">
               <img class="card-img-top mt-4" src="{{image}}" width="200" height="200">
            </a>
            <div class="card-body">
               <h4 class="card-title text-success">{{name}}</h4>
                 <div class="stars">
							        <i class="fa-solid fa-star fa-lg me-1"></i>
								    <i class="fa-solid fa-star fa-lg me-1"></i>
								    <i class="fa-solid fa-star fa-lg me-1"></i>
								    <i class="fa-solid fa-star fa-lg me-1"></i>
								    <i class="fa-solid fa-star fa-lg me-1"></i>
							    </div>

               <p class="card-text text-danger">${{price}}</p>
               {{!-- <p class="card-text text-danger">{{description}}</p> --}}

            </div>
             <a href="#"><button class="btn btn-danger"><span>Add to cart </span></button></a>
         </div>
        
         {{/each}}
      </div>
   </div>
</div>