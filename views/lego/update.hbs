<form action="/lego/edit/{{lego._id}}" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Edit Lego</h2>
   <div class="form-group">
      <label class="text-success h6"> Name</label>
      <input class="form-control" type="text" name="name" value="{{lego.name}}" required minlength="3"
         maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Description</label>
      <input class="form-control" type="text" name="description" value="{{lego.description}}" required >
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Lego Image</label><br>
      <img src="{{lego.image}}" width="100" height="100">
      <input class="form-control mt-3" type="text" name="image" value="{{lego.image}}" required>
   </div>

   <div class="form-group mt-3">
      <label class="text-success h6"> Price</label>
      <input class="form-control" type="number" name="price" value="{{lego.price}}" required minlength="3"
         maxlength="100">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Date of Manufacture</label>
      <input class="form-control" type="date" name="dom" value="{{dateFormat lego.dom 'YYYY-MM-DD'}}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy By Age</label>
      <select name="toybyage" class="form-control">
         <option value="">Select a toy by age</option>
         {{#equal lego.toybyage 1}}
         <option value="1" selected>3-5 year</option>
         <option value="2">4-8 year</option>
         <option value="3">9-11 year</option>
         <option value="4">Big Kids</option>
         {{/equal}}
         {{#equal lego.toybyage 2}}
         <option value="1">3-5 year</option>
         <option value="2" selected>4-8 year</option>
         <option value="3">9-11 year</option>
         <option value="4">Big Kids</option>
         {{/equal}}
         {{#equal lego.toybyage 3}}
         <option value="1">3-5 year</option>
         <option value="2">4-8 year</option>
         <option value="3" selected>9-11 year</option>
         <option value="4">Big Kids</option>
         {{/equal}}
         {{#equal lego.toybyage 4}}
         <option value="1">3-5 year</option>
         <option value="2">4-8 year</option>
         <option value="3">9-11 year</option>
         <option value="4" selected>Big Kids</option>
         {{/equal}}
      </select>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Status</label>
      {{#equal lego.status true}}
      <input type="checkbox" value="{{lego.status}}" checked>
      {{/equal}}
      {{#equal lego.status false}}
      <input type="checkbox" value="{{lego.status}}">
      {{/equal}}
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Edit">
   </div>
</form>