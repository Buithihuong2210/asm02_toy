<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="5">Lego List</th>
      <th>
         <div 
                    </div>
         <a class="col-sm-4" href="/lego/add">
                        <button type="button" class="btn btn-info add-new"><i class="fa fa-plus">
                           
                        </i> Add New</button></a>
         <a class="btn btn-success" href="/lego/drop"
            onclick="return confirm('Are you sure to drop all lego ?');">DROP</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Date of Manufacture</th>
      <th>Image</th>
      <th>Price</th>
      <th>Status</th>
      {{!-- <th>Toy By Age</th> --}}
      {{!-- <th>Menu</th> --}}
   </tr>
   <tr>
      <th colspan="4">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/lego/sort/asc">Ascending</option>
            <option value="/lego/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="2">
         <form action="/lego/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Enter lego name to search">
            </div>
         </form>
      </th>
   </tr>
   {{#each lego }}
   <tr>
      <td>{{name}}</td>
      {{!-- <td>{{sku}}</td> --}}
      <td>{{dateFormat dom "DD/MM/YYYY"}}</td>
      <td>
         <a href="/lego/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td>
      <td>${{price}}</td>
       
      <td>
            {{#equal status true}}
            <span style="color: red; font-weight: bold;">Stocking</span>
            {{/equal}}
            {{#equal status false}}
            <span style="color: blue; font-weight: bold;">Out of stock</span>
            {{/equal}}
         </td>
      <td>
         <a class="btn btn-warning" href="/lego/edit/{{_id}}">EDIT</a>
        
         
         <a class="btn btn-danger" href="/lego/delete/{{_id}}"> <i class="fas fa-times"></i> DELETE</a>
      </td>

      
   </tr>
   {{/each}}
</table>